<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

  <changeSet id="init-policy" author="jhkim6557">
    <createTable tableName="policy">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" />
      </column>

      <column name="policy_id" type="varchar(40)">
        <constraints nullable="false" unique="true"/>
      </column>

      <column name="payload_id" type="varchar(40)">
        <constraints nullable="false" unique="true"/>
      </column>

      <column name="payload_service" type="varchar(40)">
        <constraints nullable="false" />
      </column>

      <column name="profile_id" type="varchar(40)">
        <constraints nullable="false"/>
      </column>

      <column name="policy_title" type="varchar(255)">
        <constraints nullable="false"/>
      </column>

      <column name="created_at" type="timestamp">
        <constraints nullable="false"/>
      </column>

      <column name="updated_at" type="timestamp">
        <constraints nullable="true"/>
      </column>
    </createTable>

    <!-- payload ID 외래 키 설정 -->
    <addForeignKeyConstraint
            baseTableName="policy" baseColumnNames="payload_id"
            referencedTableName="payload" referencedColumnNames="payload_id"
            constraintName="fk_policy_payload"
            onDelete="CASCADE"/>

    <!-- 프로필 ID 외래 키 설정 -->
    <addForeignKeyConstraint
            baseTableName="policy" baseColumnNames="profile_id"
            referencedTableName="policy_profile" referencedColumnNames="policy_profile_id"
            constraintName="fk_policy_profile"
            onDelete="CASCADE" />

    <!-- Sample Data 1 -->
    <insert tableName="policy">
      <column name="policy_id" value="a1b2c3d4-e5f6-7890-1234-56789abcdef0"/>
      <column name="payload_id" value="123e4567-e89b-12d3-a456-426614174000"/>
      <column name="payload_service" value="service-1"/>
      <column name="profile_id" value="a1b2c3d4-5678-90ab-cdef-123456789abc"/>
      <column name="policy_title" value="Sample Policy Title 1"/>
      <column name="created_at" valueDate="now()"/>
      <column name="updated_at" valueDate="now()"/>
    </insert>

    <!-- Sample Data 2 -->
    <insert tableName="policy">
      <column name="policy_id" value="f1a2b3c4-d5e6-7890-1234-56789abcdef0"/>
      <column name="payload_id" value="987e6543-e89b-12d3-a456-426614174111"/>
      <column name="payload_service" value="service-2"/>
      <column name="profile_id" value="b1c2d3e4-5678-90ab-cdef-987654321abc"/>
      <column name="policy_title" value="Sample Policy Title 2"/>
      <column name="created_at" valueDate="now()"/>
      <column name="updated_at" valueDate="now()"/>
    </insert>

  </changeSet>

</databaseChangeLog>
